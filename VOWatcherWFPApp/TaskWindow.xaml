<Window x:Class="VOWatcherWFPApp.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Record Activity" Height="570" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="15,15,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="My Task" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="MyTaskComboBox" Width="211"
                  DisplayMemberPath="TaskName"
                  SelectedValuePath="Task"
                  SelectionChanged="MyTaskComboBox_SelectionChanged"         
                  Margin="48,0,10,0" Height="20"/>
            <Button Content="Add Task"  Margin="48,0,10,0" Width="100" Click="AddTaskButton_Click"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="198*"/>
                <ColumnDefinition Width="19*"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="248*"/>
            </Grid.ColumnDefinitions>

            <!-- Assigned To -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,35,8">
                <TextBlock Text="Assigned To " />
            </StackPanel>
            <TextBox x:Name="AssignedTo" Grid.Row="0" Margin="95,5,39,5" IsReadOnly="True" Grid.ColumnSpan="3"/>
            <TextBox x:Name="AssignedToId" Visibility="Collapsed"/>
            <TextBox x:Name="AssignedById" Visibility="Collapsed"/>

            <!-- Cost Centre -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,0" Height="22">
                <TextBlock Text="Cost Centre " />
            </StackPanel>
            <TextBox x:Name="CostCentre" Grid.Row="1" Margin="95,5,39,5" IsReadOnly="True" Grid.ColumnSpan="3"/>
            <TextBox x:Name="CostCentreId" Visibility="Collapsed"/>

            <!-- Project -->
            <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,0">
                <TextBlock Text="Project " />
            </StackPanel>
            <TextBox x:Name="Project" Grid.Row="2" Margin="95,5,39,5" IsReadOnly="True" Grid.ColumnSpan="3" TextChanged="Project_TextChanged"/>
            <TextBox x:Name="ProjectId" Visibility="Collapsed"/>

            <!-- Category -->
            <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,60,0" Height="22">
                <TextBlock Text="Category " />
            </StackPanel>
            <TextBox x:Name="Category" Grid.Row="2" Grid.Column="4" Margin="96,0,57,0" IsReadOnly="True" Height="22" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <TextBox x:Name="CategoryId" Grid.Row="2" Grid.Column="4" Visibility="Collapsed"/>

            <!-- Task -->
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,23,35,0">
                <TextBlock Text="Task " />
            </StackPanel>
            <TextBox x:Name="Task" Grid.Row="3" Margin="95,5,39,5" IsReadOnly="False" Grid.ColumnSpan="3"/>

            <!-- Task Description -->
            <TextBlock Grid.Row="3" Grid.Column="4" Text="Task Description" VerticalAlignment="Center" HorizontalAlignment="Left" Width="86" Margin="1,0,0,0"/>
            <TextBox x:Name="TaskDescription" Grid.Row="3" Grid.Column="4" Margin="96,5,57,5" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Grid.ColumnSpan="2" IsReadOnly="False"/>

            <!-- Start DateTime -->
            <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,12,35,0">
                <TextBlock Text="Start DateTime" />
            </StackPanel>
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="95,5,26,5" Grid.ColumnSpan="3">
                <DatePicker x:Name="StartDatePicker" Width="100"/>
                <xctk:TimePicker x:Name="StartTimePicker" Format="Custom" FormatString="HH:mm:ss"  Width="109" Margin="5,0,5,0" Height="42"/>
            </StackPanel>

            <!-- End DateTime -->
            <TextBlock Grid.Row="4" Grid.Column="4" Text="End DateTime" VerticalAlignment="Top" Margin="1,12,35,0"/>
            <StackPanel Grid.Row="4" Grid.Column="4" Orientation="Horizontal" Margin="94,5,31,5" Grid.ColumnSpan="2">
                <DatePicker x:Name="EndDatePicker" Width="100"/>
                <xctk:TimePicker x:Name="EndTimePicker" Format="Custom" FormatString="HH:mm:ss" Width="109" Margin="5,0,5,0" Height="42"/>
            </StackPanel>

            <!-- Daily Projected -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Daily Projected" VerticalAlignment="Top" HorizontalAlignment="Left" Width="85" Height="20" Margin="0,12,0,0" Grid.RowSpan="2"/>
            <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="95,0,39,0" Height="30" VerticalAlignment="Center" Grid.ColumnSpan="3">
                <xctk:IntegerUpDown x:Name="Hours" Width="40" Minimum="0" Maximum="23" FormatString="00" Watermark="hh"/>
                <TextBlock Text=":" VerticalAlignment="Center" Margin="4,0"/>
                <xctk:IntegerUpDown x:Name="Minutes" Width="40" Minimum="0" Maximum="59" FormatString="00" Watermark="mm"/>
            </StackPanel>

            <!-- Status -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Status" VerticalAlignment="Top" Margin="0,23,35,0"/>
            <ComboBox x:Name="Status" Grid.Row="6" Margin="95,11,39,198" Grid.ColumnSpan="3" SelectionChanged="Status_SelectionChanged">
                <ComboBoxItem Content="Not Started"/>
                <ComboBoxItem Content="In Process"/>
                <ComboBoxItem Content="Done"/>
            </ComboBox>

            <!-- Hidden Fields -->
            <TextBox x:Name="Hidden" Grid.Row="5" Grid.Column="5" Visibility="Collapsed" Text="0" Margin="1,0,0,247" Grid.RowSpan="2"/>


            <!-- Buttons -->
            <StackPanel Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Left" Margin="99,82,0,82">
                <Button x:Name="Save" Content="Save" Width="100" Height="32" Margin="10" Background="#0B5ED7" Foreground="White" Click="SaveButton_Click"/>
                <Button x:Name="Cancel" Content="Cancel" Width="100" Height="32" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
