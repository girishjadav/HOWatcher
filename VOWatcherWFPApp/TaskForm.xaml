<Window x:Class="VOWatcherWPFApp.TaskForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Record Activity" Height="450" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15,15,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Assigned To -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,35,8">
            <TextBlock Text="Assigned To " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="AssignedTo" Grid.Row="0" Grid.Column="1" Margin="-25,5,57,5" SelectionChanged="AssignedTo_SelectionChanged"/>

        <!-- Assigned By -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,36,0">
            <TextBlock Text="Assigned By " />

        </StackPanel>
        <ComboBox x:Name="AssignedBy" Grid.Row="0" Grid.Column="3" Margin="-25,5,57,5"/>

        <!-- Cost Centre -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,0" Height="22">
            <TextBlock Text="Cost Centre " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="CostCentre" Grid.Row="1" Grid.Column="1" Margin="-25,5,57,5"
                  SelectedValuePath="id"
                  SelectionChanged="CostCentre_SelectionChanged"/>

        <!-- Project -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,0">
            <TextBlock Text="Project " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="Project" Grid.Row="2" Grid.Column="1" Margin="-25,5,57,5"
                  SelectedValuePath="id"
                  SelectionChanged="Project_SelectionChanged"/>

        <!-- Category -->
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top" Margin="246,5,60,0" Grid.ColumnSpan="2" Height="17">
            <TextBlock Text="Category " />


        </StackPanel>
        <ComboBox x:Name="Category" Grid.Row="2" Grid.Column="3" Margin="-25,5,57,5"
                  SelectedValuePath="id" Height="22" VerticalAlignment="Bottom"/>

        <!-- Task -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,8">
            <TextBlock Text="Task " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <TextBox x:Name="Task" Grid.Row="3" Grid.Column="1" Margin="-25,5,57,5" TextChanged="Task_TextChanged"/>

        <!-- Task Description -->
        <TextBlock Grid.Row="3" Grid.Column="2" Text="Task Description" VerticalAlignment="Center" Margin="0,0,33,0" HorizontalAlignment="Right" Width="87"/>
        <TextBox x:Name="TaskDescription"
         Grid.Row="3" Grid.Column="2"
         Margin="96,5,57,5" Height="60"
         AcceptsReturn="True"
         TextWrapping="Wrap" Grid.ColumnSpan="2"/>


        <!-- Start DateTime -->

        <TextBlock Grid.Row="4" Grid.Column="0" Text="Start DateTime"  VerticalAlignment="Center" Margin="0,0,35,8"/>
      
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="-25,5,50,5">
            <DatePicker x:Name="StartDatePicker" Width="100"/>
           
            <xctk:TimePicker x:Name="StartTimePicker" Format="Custom" FormatString="HH:mm:ss" Width="109" Margin="5,0,5,0" Height="42"/>
        </StackPanel>

        <!-- End DateTime -->
        <TextBlock Grid.Row="4" Grid.Column="2" Text="End DateTime" VerticalAlignment="Center" Margin="0,0,35,8"/>
        
        <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" Margin="-25,5,50,5">
            <DatePicker x:Name="EndDatePicker" Width="100"/>
            <xctk:TimePicker x:Name="EndTimePicker" Format="Custom" FormatString="HH:mm:ss" Width="109" Margin="5,0,5,0" Height="42"/>
        </StackPanel>

        <!-- Status -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Status" VerticalAlignment="Center" Margin="0,0,35,8"/>
        <ComboBox x:Name="Status" Grid.Row="5" Grid.Column="1" Margin="-25,5,57,5">
            <ComboBoxItem Content="In Progress"/>
            <ComboBoxItem Content="Completed"/>
        </ComboBox>

        <!-- Hidden Field -->
        <TextBox x:Name="Hidden" Grid.Row="5" Grid.Column="3" Visibility="Collapsed" Text="0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="128,25,0,25">
            <Button x:Name="Save" Content="Save" Width="100" Height="32" Margin="10" Background="#0B5ED7" Foreground="White" Click="SaveButton_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Width="100" Height="32" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
