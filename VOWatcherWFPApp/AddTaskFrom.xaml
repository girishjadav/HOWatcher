<Window x:Class="VOWatcherWFPApp.AddTaskFrom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Record Activity" Height="570" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15,15,0,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Assigned To -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,35,8">
            <TextBlock Text="Assigned To " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="AssignedTo" Grid.Row="0" Grid.Column="1" Margin="-25,5,57,5" SelectionChanged="AssignedTo_SelectionChanged"/>

        <ComboBox x:Name="AssignedBy" Visibility="Collapsed"
          DisplayMemberPath="Name"
          SelectedValuePath="UserID" />

        <!-- Cost Centre -->
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,5,35,0" Height="22">
            <TextBlock Text="Cost Centre " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="CostCentre" Grid.Row="1" Grid.Column="1" Margin="-25,5,57,5"
          SelectedValuePath="id"
          SelectionChanged="CostCentre_SelectionChanged"/>

        <!-- Project -->
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,0">
            <TextBlock Text="Project " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <ComboBox x:Name="Project" Grid.Row="2" Grid.Column="1" Margin="-25,5,57,5"
          SelectedValuePath="id"
          SelectionChanged="Project_SelectionChanged"/>

        <!-- Category -->
        <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,6,36,0">
            <TextBlock Text="Category " />

        </StackPanel>
        <ComboBox x:Name="Category" Grid.Row="2" Grid.Column="3" Margin="-25,5,57,5"
          SelectedValuePath="id" Height="22" VerticalAlignment="Bottom"/>

        <!-- Task -->
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,8">
            <TextBlock Text="Task " />
            <TextBlock Text="*" Foreground="Red" Width="9" />

        </StackPanel>
        <TextBox x:Name="Task" Grid.Row="3" Grid.Column="1" Margin="-25,5,57,5" TextChanged="Task_TextChanged"/>

        <!-- Task Description -->
        <TextBlock Grid.Row="3" Grid.Column="2" Text="Task Description" VerticalAlignment="Center" Margin="0,0,33,0" HorizontalAlignment="Right" Width="87"/>
        <TextBox x:Name="TaskDescription"
                 Grid.Row="3" Grid.Column="2"
                 Margin="96,5,57,5" Height="60"
                 AcceptsReturn="True"
                 TextWrapping="Wrap" Grid.ColumnSpan="2"/>

        <!-- Start DateTime -->
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,35,8">
            <TextBlock Text="Start Date" />
            <TextBlock Text="*" Foreground="Red" Width="9" />
        </StackPanel>
        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="-25,5,50,5">
            <DatePicker x:Name="StartDatePicker" Width="214"/>
        </StackPanel>

        <!-- End DateTime -->
        <TextBlock Grid.Row="4" Grid.Column="2" Text="End Date" VerticalAlignment="Center" Margin="0,0,35,8"/>
        <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" Margin="-25,5,50,5">
            <DatePicker x:Name="EndDatePicker" Width="214"/>
        </StackPanel>

        <!-- Hours and Minutes -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Daily Projected"
                   VerticalAlignment="Top" HorizontalAlignment="Left" Width="85" Height="20" Margin="0,12,0,0"/>
        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal"
                    Margin="-25,5,57,5" Height="30" VerticalAlignment="Top">
            <xctk:IntegerUpDown x:Name="Hours" Width="40" Minimum="0" Maximum="23"
                                FormatString="00" Watermark="hh"/>
            <TextBlock Text=":" VerticalAlignment="Center" Margin="4,0"/>
            <xctk:IntegerUpDown x:Name="Minutes" Width="40" Minimum="0" Maximum="59"
                                FormatString="00" Watermark="mm"/>
        </StackPanel>


        <!-- Hidden Field -->
        <TextBox x:Name="Hidden" Grid.Row="5" Grid.Column="3" Visibility="Collapsed" Text="0"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="128,96,0,106">
            <Button x:Name="Save" Content="Save" Width="100" Height="32" Margin="10" Background="#0B5ED7" Foreground="White" Click="SaveButton_Click"/>
            <Button x:Name="Cancel" Content="Cancel" Width="100" Height="32" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
