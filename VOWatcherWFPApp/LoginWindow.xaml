<Window x:Class="VOWatcherWFPApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="188" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border BorderBrush="SteelBlue" BorderThickness="1" Padding="10" Height="178" VerticalAlignment="Top">
        <Grid Margin="-11,0,-11,-1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Username -->
            <Label Grid.Row="0" Grid.Column="0" Content="Username:" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,5,0"/>
            <TextBox x:Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" Height="25" Width="200" Margin="0,5"/>

            <!-- Password -->
            <Label Grid.Row="1" Grid.Column="0" Content="Password:" VerticalAlignment="Center" FontWeight="Bold" HorizontalAlignment="Right" Margin="0,0,5,0"/>
            <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Height="25" Width="200" Margin="0,5"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,31" Width="176" Grid.RowSpan="4" Grid.Column="1">
                <Button x:Name="btnLogin" Content="Login" Width="80" Height="30" Margin="0,0,10,0" Click="LoginOrLogout_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="30" Margin="10,0" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
